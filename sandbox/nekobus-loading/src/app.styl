body
  color #fff
  background #000
  margin 0
  padding 0

#app
  display flex
  justify-content center
  align-items flex-end
  flex-wrap wrap
  height 100vh
  width 100vw
  position relative

// for loading.vue (.vueに書いたstyleから背景読み込みがscssでもstylusでも出来なかった)
$busImages = large, kids1, kids2, girl, man, dog, cat
.bus

  for $img in $busImages
    &--{$img}
      $filePath = 'assets/images/bus/' + $img + '.png'
      $width = image-size($filePath)[0] / 2
      $height = image-size($filePath)[1] / 2

      background-image url($filePath)
      width $width
      height $height
